<!--
     Demonstrates use of the com.google.android.maps.MapView. See corresponding 
	Java code com.example.android.apis.view.MapViewDemo.java.
-->


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/welcome_intro_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_intro" />

            <Button
                android:id="@+id/ButtonOpenPlanner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/OpenPlanner" />

        </LinearLayout>
    </ScrollView>

